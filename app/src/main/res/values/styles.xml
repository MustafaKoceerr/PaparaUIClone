<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OnBoardingBaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/investment_medium</item>
    </style>

    <style name="OnBoardingDetailTxtStyle">
        <item name="android:fontFamily">@font/papara_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:titleMarginTop">18dp</item>
    </style>

    <style name="OnBoardingTitleTxtStyle">
        <item name="android:fontFamily">@font/papara_semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>