<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/drawable_grey_bg"
    tools:context=".ui.home.viewpagerfragment.HomePagerFragment5">

    <ImageView
        android:id="@+id/imgPreciousHeader"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_no_foreign_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#FFFFFF"
        app:riv_border_width="2dp"
        app:riv_corner_radius="20dp" />


    <TextView
        android:id="@+id/txtPrecious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/papara_regular"
        android:text="Döviz\nHesapları"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/imgPreciousHeader"
        app:layout_constraintTop_toBottomOf="@id/imgPreciousHeader" />

    <TextView
        android:id="@+id/txtExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/papara_regular"
        android:text="(Dolar, Euro)"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/txtPrecious"
        app:layout_constraintTop_toBottomOf="@id/txtPrecious" />


    <Button
        android:id="@+id/btnWithdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_white_drawable_bg"
        android:drawableEnd="@drawable/ic_investment_notification_black"
        android:fontFamily="@font/papara_bold"
        android:paddingHorizontal="12dp"
        android:text="Gelince Haber Ver"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/img_no_foreign_currency"
        app:layout_constraintBottom_toBottomOf="@+id/txtExample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgPreciousHeader" />


</androidx.constraintlayout.widget.ConstraintLayout>