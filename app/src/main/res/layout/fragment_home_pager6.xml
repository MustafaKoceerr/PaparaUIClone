<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/drawable_grey_bg"
    tools:context=".ui.home.viewpagerfragment.HomePagerFragment6">

    <TextView
        android:id="@+id/imgPreciousHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_papara_rounded_gray"
        android:drawablePadding="8dp"
        android:fontFamily="@font/papara_regular"
        android:src="@drawable/ic_no_foreign_header"
        android:text="Tüm Varlıklarım"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#FFFFFF"
        app:riv_border_width="2dp"
        app:riv_corner_radius="20dp" />


    <TextView
        android:id="@+id/txtPrecious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/papara_regular"
        android:text="₺999,92"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/imgPreciousHeader"
        app:layout_constraintTop_toBottomOf="@id/imgPreciousHeader" />


    <LinearLayout
        android:id="@+id/linearTLAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txtPrecious">

        <TextView
            android:id="@+id/txtExample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/turkish_flag_16px"
            android:drawablePadding="8dp"
            android:fontFamily="@font/papara_regular"
            android:gravity="center_vertical"
            android:text="Türk Lirası Hesabı"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/papara_bold"
            android:text="₺260,89"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPreciousAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearTLAcc">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_wrap_up_gold_18dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/papara_regular"
            android:gravity="center_vertical"
            android:text="Kıymetli Madenler"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/papara_bold"
            android:text="__"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearSavingAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearPreciousAcc">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_investment_18dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/papara_regular"
            android:gravity="center_vertical"
            android:text="Yatırım Hesabı"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/papara_bold"
            android:text="__"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearSavingAcc">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_no_saving_header_18dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/papara_regular"
            android:gravity="center_vertical"
            android:text="Birikim Hesabı"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/papara_bold"
            android:text="__"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_info_request_money"
        app:layout_constraintBottom_toBottomOf="@id/txtPrecious"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgPreciousHeader" />


</androidx.constraintlayout.widget.ConstraintLayout>